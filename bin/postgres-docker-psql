#!/bin/bash

function usage() {
    echo "Usage: postgres-docker-restore container_name db_user"
}

if [[ ! "$#" == 2 ]]; then
    usage
    exit 1
fi
container_name="$1"
db_user="$2"
if [ -z "$container_name" ] || [ -z "$db_user" ]; then
    usage
    exit 1
fi

docker exec -it "$container_name" '/bin/sh' -c "psql -U $db_user"
